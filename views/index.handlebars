<div class="container">
    <div class="jumbotron jumbotron-fluid">
    <form class="text-center" action="/api/song" method="POST">
        <div class="form-group row">
            <label for="InputTitle" class="col-sm-2 form-control-label">Song Title</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="InputTitle" name="title" placeholder="Enter Song Title Here..." value="">
            </div>
        </div>
        <div class="form-group row">
            <label for="ArtistName" class="col-sm-2 form-control-label">Artist Name</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="ArtistName" name="artist" placeholder="Enter Artist Here..." value="">
            </div>
        </div>
        <div class="form-group row">
            <label for="Link" class="col-sm-2 form-control-label">Song Link</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="Link" name="link" value="" placeholder="Enter Link to Song Here...">
            </div>
        </div>
        <div class="form-group row">
            <label for="EyeColor" class="col-sm-2 form-control-label">Eye Color</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="EyeColor" name="color" value="" placeholder="Enter Eye Color Here...">
            </div>
        </div>
        <div class="form-group row">
            <label for="PowerName" class="col-sm-2 form-control-label">Power Name</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="PowerName" name="name" value="" placeholder="Enter Name of Power Here...">
            </div>
        </div>
        <div class="form-group row">
            <label for="PowerType" class="col-sm-2 form-control-label">Power Type</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="PowerType" name="type" placeholder="Enter Power Type Here..." value="">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    </div>
</div>

<hr>

<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
        <div class="input-group"><span class="input-group-addon">Search</span>
            <input id="Search" type="text" class="form-control" placeholder="Type Here to Search..."></input>
        </div>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead> 
                        <th class="text-center">Song Title</th> 
                        <th class="text-center">Artist</th> 
                        <th class="text-center">Eye Color</th>
                        <th class="text-center">Power Name</th>
                        <th class="text-center">Power Type</th> 
                    </thead> 
                    <tbody class="searchable"> 
                        {{#song}} 
                        <tr>
                            <td><a href={{link}}>{{title}}</a></td> 
                            <td>{{artist}}</td> 
                            <td style="background-color:{{hue}};color:{{opp_hue}}">{{eye_color}}</td>
                            <td>{{power_name}}</td>
                            <td>{{power_type}}</td>
                        </tr> 
                        {{/song}}
                    </tbody> 
                </table>
            </div>
        </div>
    </div>
</div>